<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
</head>
<body>

<div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-primary">
        <ul class="navbar-nav">
            <li class="nav-item active"><b class="nav-item active">
                <a class="nav-link" href="{{ url('to_do_index') }}" title="{{ 'label_to_do'|trans }}">{{'label_to_do'|trans}} <span class="sr-only">(current)</span></a>
                </b></li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ url('list_category_index') }}" title="{{ 'label_list_category'|trans }}">{{'label_list_category'|trans}}</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ url('list_tag_index') }}" title="{{ 'label_list_tags'|trans }}">{{'label_list_tags'|trans}}</a>
            </li>
            <li style="border-right:2px solid white"></li>
            <li class="nav-item active"><b class="nav-item active">
                <a class="nav-link" href="{{ url('note_index') }}" title="{{ 'label_notes'|trans }}">{{'label_notes'|trans}}</a>
                </b></li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ url('note_category_index') }}" title="{{ 'label_list_category'|trans }}">{{'label_list_category'|trans}}</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ url('note_tag_index') }}" title="{{ 'label_list_tags'|trans }}">{{'label_list_tags'|trans}}</a>
            </li>
        </ul>
        <ul class="nav navbar-nav ml-auto">
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <li style="border-left:2px solid white;"></li>
            <li class="nav-item active noHover nav-link">{{ app.user.email }}</li>
            <li class="nav-item active toRight">
                <a class="btn btn-light" href="{{ url('app_logout') }}">{{ 'action_logout'|trans }}</a>
            </li>
        {% else %}
            <li class="nav-item active toRight" style="margin-right: 5px;">
                <a class="btn btn btn-light" href="{{ url('app_register') }}">{{ 'action_register'|trans }}</a>
            </li>
            <li class="nav-item active toRight">
                <a class="btn btn btn-light" href="{{ url('app_login') }}">{{ 'action_login'|trans }}</a>
            </li>
        {% endif %}
        </ul>
    </nav>

    {% include 'default/_flash_messages.html.twig' %}
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    <script src="{{ asset('js/script.js') }}"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>