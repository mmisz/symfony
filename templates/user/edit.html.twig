{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_edit'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'user_edit'|trans({'%id%': user.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('user_edit', {id: user.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_edit'|trans }}" class="btn btn-secondary" />
    </div>
    <div class="form-group row float-sm-left">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ url('user_index') }}" class="btn btn-primary">
                {{ 'action_back_to_list'|trans }}
            </a>
            {% else %}
                <a href="{{ url('to_do_index') }}" class="btn btn-primary">
                    {{ 'action_back_to_list'|trans }}
                </a>
        {% endif %}
    </div>
    {{ form_end(form) }}
{% endblock %}